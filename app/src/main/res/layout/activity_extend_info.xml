<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context="com.swati.directory.ExtendInfo">

    <!--TextViews to show full information of the selected person from listView and ImageView to set the Profile pic-->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
         />
    <!--To show that image is loading-->
    <ProgressBar
        android:id="@+id/progresBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
         android:visibility="gone"
       />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name     : "
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="49dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Middle Name : "
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname         : "
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address 1       : "
        android:id="@+id/textView11"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView4"
        android:layout_below="@+id/textView11"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address 2       : "
        android:id="@+id/textView12"
        android:layout_below="@+id/textView4"

        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView5"
        android:layout_below="@+id/textView12"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City                  : "
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House No       : "
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile No      : "
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthdate        : "
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood              : "
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:id="@+id/first"
        android:layout_above="@+id/textView2"
        android:layout_toEndOf="@+id/textView"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle"
        android:layout_above="@+id/textView3"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/surname"
        android:layout_above="@+id/textView11"
        android:layout_toEndOf="@+id/textView3"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address1"
        android:layout_above="@+id/textView12"
        android:layout_toEndOf="@+id/textView11"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address2"
        android:layout_above="@+id/textView6"
        android:layout_toEndOf="@+id/textView11"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/textView6"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/house_no"
        android:layout_above="@+id/textView8"
        android:layout_toEndOf="@+id/textView7"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mobile_no"
        android:layout_above="@+id/textView9"
        android:layout_toEndOf="@+id/textView8"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/birthdate"
        android:layout_above="@+id/textView10"
        android:layout_toEndOf="@+id/textView9"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blood"
        android:layout_below="@+id/birthdate"
        android:layout_toEndOf="@+id/textView10"
        android:textColor="#000000" />



</RelativeLayout>
